<div id="login-form" class="span12">
    <div class="page-title-small">
        <h3>快速注册</h3>
    </div>
    <a href="" class="facebook_connect">
        <div class="img"><i class="fa-icon-facebook"></i></div>
        <div class="text">新浪微博</div>
    </a>
    <a href="" class="twitter_connect">
        <div class="img"><i class="fa-icon-twitter"></i></div>
        <div class="text">腾讯微博</div>
    </a>
    <div class="page-title-small">
        <h3 style="background:#f0f0f0">或者</h3>
    </div>
    <form method="post" action="{{ path('register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register">
        <div class="row-fluid">
                        {{ form_widget(form._token) }}
                        {{ form_widget(form.username, {'attr': {'class': 'span12', 'placeholder':'用户名'} }) }}
                        {{ form_errors(form.username) }}
                        {{ form_widget(form.email, {'attr': {'class': 'span12', 'type': 'text', 'placeholder':'邮箱'} }) }}
                        {{ form_errors(form.email) }}
                        {{ form_widget(form.plainPassword.first, {'attr': {'class': 'span12', 'placeholder':'密码'} }) }}
                        {{ form_errors(form.plainPassword.first) }}
                        {{ form_widget(form.plainPassword.second, {'attr': {'class': 'span12', 'placeholder':'确认密码'} }) }}
                        {{ form_errors(form.plainPassword.second) }}
        </div>
        <div class="actions">
            <input type="submit"  class="btn span12" value="注 册" />
        </div>
        <div class="row-fluid">
            <div class="forgot">
                <a href="{{ path('login') }}">已有账号？</a>
            </div>
        </div>	
    </form>
</div>
